{
  "compilerOptions": {
    "outDir": "dist",
    "declarationDir": "dist",
    "target": "es2019",
    "lib": ["es2019", "dom"],
    "strict": true,
    "declaration": true,
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types"],
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "dist",
    "node_modules",
    ".cache",
    ".cache-loader",
    ".next",
    "chrome-extension"
  ]
}
